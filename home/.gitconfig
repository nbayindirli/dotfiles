# common and fallback configurations
[user]
    name = yorhodes
    email = yorkerhodesiv@gmail.com
    signingkey = 8C6573483BF95681
[core]
    sshCommand = ssh -i ~/.ssh/id_ed25519
    editor = code -w
[color]
    ui = auto
[init]
    defaultBranch = main
[pull]
	ff = only
	rebase = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[push]
	default = current
[commit]
    gpgsign = true
[includeIf "gitdir:~/celo/"]
    path = ~/.gitconfig.celo
[includeIf "gitdir:~/gauntlet/"]
    path = ~/.gitconfig.gauntlet
